<phone:PhoneApplicationPage
    x:Class="QuranPhone.DetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignData SampleData/DetailsViewModelSampleData.xaml}"
    mc:Ignorable="d"
    xmlns:myui="clr-namespace:QuranPhone.UI"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="PortraitOrLandscape" Orientation="Portrait" 
    BackKeyPress="OnBackNavigation"
    shell:SystemTray.IsVisible="False">
    <phone:PhoneApplicationPage.Resources>
        <myui:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </phone:PhoneApplicationPage.Resources>
    <Grid>
        <phone:Pivot ItemsSource="{Binding Pages}" Name="MainPivot"
                 Background="{StaticResource LightBackground}" FlowDirection="RightToLeft"
                 SelectedIndex="{Binding CurrentPageIndex, Mode=TwoWay}">
            <phone:Pivot.HeaderTemplate>
                <DataTemplate>
                </DataTemplate>
            </phone:Pivot.HeaderTemplate>
            <phone:Pivot.ItemTemplate>
                <DataTemplate>
                    <ScrollViewer Margin="-10,-40,-10,0" HorizontalAlignment="Stretch">
                        <Grid>
                            <myui:CachedImage ImageSource="{Binding ImageSource}" PageNumber="{Binding PageNumber}" 
                                              MouseLeftButtonUp="ScreenTap" 
                                              Visibility="{Binding ShowTranslation, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                            <myui:TranslationView DataContext="{Binding}"
                                              Visibility="{Binding ShowTranslation, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </Grid>
                    </ScrollViewer>
                </DataTemplate>
            </phone:Pivot.ItemTemplate>
        </phone:Pivot>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0" Width="100" Style="{StaticResource ChromelessButtonStyle}" Click="MenuToggle" Name="menuToggleButton">
            <StackPanel Orientation="Horizontal" Background="Transparent" Height="50" Width="70">
                <Ellipse Fill="{StaticResource DarkBlueText}" Width="8" Height="8" Margin="5"/>
                <Ellipse Fill="{StaticResource DarkBlueText}" Width="8" Height="8" Margin="5" />
                <Ellipse Fill="{StaticResource DarkBlueText}" Width="8" Height="8" Margin="5"/>
            </StackPanel>
        </Button>
    </Grid>
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar Opacity="0.9" IsVisible="False"
                              BackgroundColor="#FFFDFCF3"
                              ForegroundColor="#FF49A4C5">
            <shell:ApplicationBarIconButton IconUri="/Assets/Images/appbar.globe.png" 
                                            Text="Translate" Click="Translation_Click"/>
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="MenuItem 1"/>
                <shell:ApplicationBarMenuItem Text="MenuItem 2"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>
</phone:PhoneApplicationPage>